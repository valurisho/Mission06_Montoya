@model Application

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h1>Enter a Movie into the collection</h1>
<div>
    <form method="post">
        <label asp-for="Category">Category:</label>
        <input asp-for="Category" type="text" placeholder="Category" required/><br/><br/>
        <label asp-for="Title">Title</label>
        <input asp-for="Title" type="text" placeholder="Title" required><br/><br/>
        <label asp-for="Year">Year:</label>
        <input asp-for="Year" type="number" required/><br/><br/>
        <label asp-for="Director">Director</label>
        <input asp-for="Director" type="text" placeholder="Director" required><br/><br/>
        <label asp-for="Rating">Rating</label>
        <select asp-for="Rating" required>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select><br/><br/>
        <label asp-for="Edited">Edited</label>
        <select asp-for="Edited">
            <option value="false">No</option>
            <option value="true">Yes</option>
        </select><br/><br/>
        <label asp-for="LendTo">Lend to:</label>
        <input asp-for="LendTo" type="text" placeholder="Lend to:"><br/><br/>
        <label asp-for="Notes">Notes</label>
        <input asp-for="Notes" type="text" placeholder="50 characters max." maxlength="50">
        <br/><br/>

        <button type="submit">Submit Film</button>
        
    </form>
</div>
