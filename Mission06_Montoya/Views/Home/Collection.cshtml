@model List<Movie> 
@*has to be the list of movies not only Movie*@

<h2>Movie Collection</h2>

<table class="table table-bordered">
    <thead class="fw-bold">
    <tr>
        <th>Category</th>
        <th>Title</th>
        <th>Year</th>
        <th>Director</th>
        <th>Rating</th>
        <th>Edited</th>
        <th>Lend To</th>
        <th>CopiedToPlex</th>
        <th>Notes</th>
        <td></td>
        <td></td>
    </tr>
    </thead>
    <tbody>
    @foreach (var x in Model) //loop through the list of movies
    {
        <tr>
            <td>@x.Category?.CategoryName</td>
            <td>@x.Title</td>
            <td>@x.Year</td>
            <td>@x.Director</td>
            <td>@x.Rating</td>
            <td>@x.Edited</td>
            <td>@x.LentTo</td>
            <td>@x.CopiedToPlex</td>
            <td>@x.Notes</td>
            <td><a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@x.MovieId">Edit</a></td>
            <td><a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@x.MovieId">Delete</a></td>

        </tr>
    }
    </tbody>
</table>